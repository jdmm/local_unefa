                                <separator string="" colspan="4"/>
                                <field name="contenido_id" colspan="4" nolabel="1" select="0"/>
                            </page>                  
                        </notebook>
                    </group>
                </sheet>                
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="view_unefa_contenido_tree">
         <field name="name">unefa_contenido.tree</field>
        <field name="model">unefa.contenido</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="res_contenido">
                <field name="nombre"/>
                <field name="codigo" />
    
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_unefa_contenido">
        <field name="name">Unefa contenido</field>
