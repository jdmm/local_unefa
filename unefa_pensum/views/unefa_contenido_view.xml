        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    


    <menuitem name="Gestionar contenido" id="menu_unefa_contenido"  parent="unefa_menu_principal_desplegar" action="action_unefa_contenido" sequence="40" />
