<?xml version="1.0" encoding="utf-8"?>
   <openerp>
     <data>
    <record model="ir.ui.view" id="view_unefa_plan_evaluacion_form">
        <field name="name">unefa_plan_evaluacion.form</field>
        <field name="model">unefa.plan.evaluacion</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Plan de Evaluacion">
               <header> 
                   <button name="aprobar_pde" string = "Aprobar"/>
                   <button name="generar_pde" string = "Generar Plan de Evaluacion"/>
                   <field name="state" widget="statusbar" statusbar_visible="borrador,aprobado" />
                </header> 
                
                <sheet>
                <h2>
                    <center>
                        <label string="Plan de Evaluacion" />
                    </center>
                </h2>
                
                <group col="6" colums="4">
                <field name="fecha" on_change="onchange_cargar_datos()"/>
                <field name="nucleo" invisible="1"/>
                <field name="carrera" invisible="1"/>
                <field name="division" invisible="1"/>
                <field name="sede" invisible="1"/>
                <field name="regimen" invisible="1"/>
                <field name="aula" invisible="1"/>
                <field name="ciProfesor" invisible="1"/>
                <field name="seccion" invisible="1"/>
                <field name="semestre" invisible="1"/>
                <field name="materia" invisible="1"/>
                <field name="codigoMateria" invisible="1"/>
                <field name="nombreCoordinador" invisible="1"/>
                <field name="horasSemanales" invisible="1"/>
                <field name="numeroEstudiantesInscritos" invisible="1"/>
                <field name="periodoAcademico" />
                </group>
		
		<group >
		<field name="semestre_id" style="width: 40%%" />
		<field name="materia_id" style="width: 40%%" attrs="{'invisible':[('semestre_id','=',False)]}"/>
		<field name="seccion_id" style="width: 40%%" attrs="{'invisible':[('materia_id','=',False)]}"/>
                </group>

           
            <notebook attrs="{'invisible':[('seccion_id','=',False)]}">
                <page string="Cortes"> 
                    <field name="corte_id"/>
                </page>
            </notebook>

                
                </sheet>
            </form>
        </field>
        
    </record>
    
